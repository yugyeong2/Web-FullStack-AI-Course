{
  "compilerOptions": {
    "baseUrl": "src", // 모듈 해석의 기본 경로를 src로 설정
    "target": "es6", // ECMAScript 2015(ES6) 이상을 대상으로 설정
    "lib": ["dom", "es2015"], // 브라우저 환경 및 ES2015 기능 사용
    "allowJs": true, // JavaScript 파일을 허용하여 점진적 전환 가능
    "checkJs": false, // JS 파일의 타입 체크 비활성화
    "skipLibCheck": true, // 외부 라이브러리의 타입 검사를 건너뜀
    "strict": true, // 엄격한 타입 체크 옵션 활성화
    "esModuleInterop": true, // CommonJS와 ES 모듈의 호환성 제공
    "allowSyntheticDefaultImports": true, // 기본 가져오기를 허용
    "module": "commonjs", // Node.js에서 사용하는 모듈 시스템인 CommonJS로 설정
    "moduleResolution": "node", // Node.js 방식으로 모듈 해석
    "resolveJsonModule": true, // JSON 파일을 모듈처럼 가져올 수 있게 설정
    "isolatedModules": true, // 개별 파일을 독립적으로 트랜스파일
    "noEmit": false, // 컴파일 결과물을 출력 (noEmit: true 제거)
    "outDir": "./dist", // 컴파일된 파일들이 저장될 디렉터리
    "forceConsistentCasingInFileNames": true // 파일명 대소문자 일관성 강제
  },
  "include": ["src/**/*"], // src 디렉터리의 모든 파일을 포함
  "exclude": ["node_modules", "dist"] // node_modules와 dist 디렉터리는 제외
}

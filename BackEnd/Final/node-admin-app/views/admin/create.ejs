<!-- 우측 콘텐츠 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>신규 관리자 등록</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Home/Index">Home</a>
            </li>
            <li>
                <a>관리자 정보 관리</a>
            </li>
            <li class="active">
                <strong>신규 관리자 등록</strong>
            </li>
        </ol>
    </div>

    <div class="col-lg-2">
    </div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <!-- form 태그에 입력한 내용을 /admin/create 경로로 POST 방식으로 보낸다. -->
    <form id="createForm" action="/admin/create" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            
            <!-- 관리자 아이디/암호/소속 회사 UI 제공 -->
            <div class="row">
                <!-- 관리자 아이디 영역 -->
                <!-- bootstrap에서 row는 12칸으로 이루어지는데(col), 그 중 4칸을 차지한다. -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자 아이디</label>
                        <!-- admin_id 속성으로 백엔드에서 데이터를 가져온다. -->
                        <input type="text" id="admin_id" name="admin_id" class="form-control"/>
                    </div>
                </div>

                <!-- 암호 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자 암호</label>
                        <input type="password" id="admin_password" name="admin_password" class="form-control"/>
                    </div>
                </div>

                <!-- 소속 회사 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">소속 회사 코드</label>
                        <select id="company_code" name="company_code" class="form-control">
                            <option value="9">선택</option>
                            <option value="0">자회사</option>
                            <option value="1">협력사</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- 부서명/이름/메일 주소 UI 제공 -->
            <div class="row">
                <!-- 부서명 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">부서명</label>
                        <input type="text" id="dept_name" name="dept_name" class="form-control"/>
                    </div>
                </div>

                <!-- 이름 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">이름</label>
                        <input type="text" id="admin_name" name="admin_name" class="form-control"/>
                    </div>
                </div>

                <!-- 메일 주소 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">이메일</label>
                        <input type="text" id="email" name="email" class="form-control"/>
                    </div>
                </div>
            </div>

            <!-- 전화번호/사용 여부 UI 제공 -->
            <div class="row">
                <!-- 전화번호 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">전화번호</label>
                        <input type="text" id="telephone" name="telephone" class="form-control"/>
                    </div>
                </div>

                <!-- 사용 여부 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">사용 여부</label>
                        <select id="used_yn_code" name="used_yn_code" class="form-control">
                            <option value="9">선택</option>
                            <option value="0">사용하지 않음</option>
                            <option value="1">사용</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- 저장/목록 이동 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/admin/list" class="btn btn-info">목록</a>
            </div>

        </div>
    </form>

</div>